div(ng-controller="chat")
    div
        | {{room}}
        | {{error}}
    div(ng-repeat="message in messages")
       | {{message.from.name}} : {{message.content}}

    div
        input(type="text", ng-model="content")
        a.btn.btn-primary(ng-click="say(content)") say

    div
        | {{user.name}}